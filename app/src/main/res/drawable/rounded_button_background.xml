<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="#6200EE"/> <!-- Background color of the button -->
    <corners android:radius="16dp"/> <!-- Corner radius for rounded corners -->
    <padding android:left="16dp" android:right="16dp" android:top="8dp" android:bottom="8dp"/> <!-- Padding inside the button -->

    <!-- Optional: Add a stroke (border) -->
    <stroke
        android:width="1dp"
        android:color="#3700B3"/> <!-- Border color -->
</shape>